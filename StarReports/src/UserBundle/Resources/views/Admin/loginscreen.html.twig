{% extends 'UserBundle:Layout:login_layout.html.twig' %}
 {% block body %}
<div class="login-box">
    <div class="login-logo">
        <img src="/img/Star-Logo-s.png">
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>


           <p><span class="errormsg" id="loginError">[[errorMessage]]</span></p>

        <form  id="login_form" action="{{ path('login_check') }}" method="post" angular-submit >
            <div class="form-group has-feedback">
                <input type="email" class="form-control" ng-model="login_form.email" required placeholder="Email" name="_username" ng-model="username">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" ng-model="login_form.password" required placeholder="Password" name="_password" ng-model="password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                           {# <input type="checkbox"> Remember Me#}
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <a href="#">I forgot my password</a><br>
        <a href="register.html" class="text-center">Register a new membership</a>

    </div>
    <!-- /.login-box-body -->
</div>
{% endblock %}