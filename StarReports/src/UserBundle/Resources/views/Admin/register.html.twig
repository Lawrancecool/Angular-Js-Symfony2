
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Employee</h3>

        <div class="box-tools pull-right">
            <a href="" ui-sref="loginsucess.showusers" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-list fa-6" style="color: #3c8dbc"></i></a>{#
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>#}
        </div>
    </div>
    <!-- /.box-header -->
    <form id="reg_form" name="reg_form"  action="{{ path('add_employee') }}" method="post"  angular-submit>
    <div class="box-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Firstname</label>
                    {{ form_widget(form.fname, { 'attr': {'class': 'form-control','placeholder': 'Firstname','ng-model':'reg_form.fname'} }) }}
                </div>
                <!-- /.form-group -->
                <div class="form-group">
                    <label>Email</label>
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control','placeholder': 'Email','ng-model':'reg_form.email'} }) }}
                </div>
                <div class="form-group">
                    <label>Department</label>
                    {#<select ng-model="reg_form.dept" name="reg[dept]" class="form-control select2" style="width: 100%;">
                        <option value="" selected>Select</option>
                        {% for department in departments %}
                            <option value="{{ department.id }}" >{{ department.name }}</option>
                        {% endfor %}
                    </select>#}
                    {{ form_widget(form.deptid, { 'attr': {'class': 'form-control','placeholder': '','ng-model':'reg_form.deptid'} }) }}

                </div>
                <div class="form-group">
                    <label>Password</label>
                    {{ form_widget(form.password, { 'attr': {'class': 'form-control','placeholder': 'Password','ng-model':'reg_form.password'} }) }}

                </div>
                <!-- /.form-group -->
            </div>
            <!-- /.col -->
            <div class="col-md-6">
                <div class="form-group required">
                    <label class="control-label">Lastname</label>
                    {{ form_widget(form.lname, { 'attr': {'class': 'form-control','placeholder': 'Lastname','ng-model':'reg_form.lname'} }) }}
                </div>
                <div class="form-group ">
                    <label>Phone</label>
                    {{ form_widget(form.mobile, { 'attr': {'class': 'form-control','placeholder': 'Phone','ng-model':'reg_form.mobile'} }) }}

                </div>
                <!-- /.form-group -->
                <div class="form-group">
                    <label>Designation</label>
                    {{ form_widget(form.desigid, { 'attr': {'class': 'form-control','placeholder': 'Phone','ng-model':'reg_form.desigid'} }) }}

                </div>
                <div class="form-group">
                    <label>Retype password</label>
                    {{ form_widget(form.plainPassword, { 'attr': {'class': 'form-control','placeholder': 'Password','ng-model':'reg_form.cpassword'} }) }}


                </div>

                <!-- /.form-group -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->


    </div>
        <div class="box-footer">
            <button type="submit" ng-disabled="reg_form.$invalid" class="btn btn-primary pull-right">Add</button>
        </div>
    </form>

    <!-- /.box-body -->

</div>