
<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Holiday</h3>

        <div class="box-tools pull-right">
            <a href="" ui-sref="loginsucess.showall_holiday" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-list fa-6" style="color: #3c8dbc"></i></a>{#
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>#}
        </div>
    </div>
    <!-- /.box-header -->
    <form id="holiday" name="holiday"  action="{{ path('addnewholiday') }}" method="post"  angular-submit>
        <div class="box-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Holiday name</label>
                        <input type="text" class="form-control" name="holiday[description]" ng-model="holiday.name">
                    </div>

                    <div ng-controller="DatepickerController as vm" class="form-group">
                        <label>Start date</label>

                        <div  class="input-group"  datetimepicker-options="[[ vm.options ]]"  datetimepicker ng-model="vm.date">

                            <input type="text" name="holiday[sdate]" ng-model="holiday.sdate" class="form-control" >
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>

                        </div>
                        <!-- /.input group -->
                    </div>
                    <!-- /.form-group -->

                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
                <div class="col-md-6">

                    <div class="form-group">
                        <label>Holiday type</label>
                        <select ng-model="holiday.holiday_type" name="holiday[holiday_type]" class="form-control select2" style="width: 100%;">
                            <option value="" selected>Select</option>
                            {% set i=0 %}
                            {% for h_type in holidays_type %}
                                <option value="{{ h_type.id }}" >{{ h_type.typeslist }}</option>
                                {% set i=i+1 %}
                            {% endfor %}
                        </select>
                    </div>
                   {# <div class="form-group ">
                        <label>End Date</label>
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" name="holiday[enddate]" class="form-control" ng-model="holiday.enddate">
                    </div>#}
                    <div ng-controller="DatepickerController as vm" class="form-group">
                        <label>End date</label>

                        <div  class="input-group"  datetimepicker-options="[[ vm.options ]]"  datetimepicker ng-model="vm.date">

                            <input type="text" name="holiday[enddate]" ng-model="holiday.enddate" class="form-control" >
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>

                        </div>
                        <!-- /.input group -->
                    </div>

                    <!-- /.form-group -->


                    <!-- /.form-group -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->


        </div>
        <div class="box-footer">
            <button type="submit" ng-disabled="holiday.$invalid" class="btn btn-primary pull-right">Add</button>
        </div>
    </form>

    <!-- /.box-body -->

</div>